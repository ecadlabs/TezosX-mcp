{
  "name": "@ecadlabs/tezosx-mcp",
  "version": "1.0.2",
  "description": "MCP server for Tezos wallet operations",
  "main": "dist/index.js",
  "bin": {
    "tezosx-mcp": "./dist/index.js"
  },
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "frontend/dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "postinstall": "test -f frontend/package.json && cd frontend && npm install --include=dev 1>&2 || true",
    "build": "cd frontend && npm run build && cd .. && npx tsc",
    "build:backend": "npx tsc",
    "build:frontend": "cd frontend && npm run build",
    "prepublishOnly": "cp ../README.md . && npm run build",
    "postpublish": "rm -f README.md",
    "start": "node dist/index.js"
  },
  "keywords": [
    "mcp",
    "tezos",
    "wallet",
    "taquito",
    "blockchain",
    "model-context-protocol"
  ],
  "author": "ECAD Labs",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ecadlabs/TezosX-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/ecadlabs/TezosX-mcp/issues"
  },
  "homepage": "https://github.com/ecadlabs/TezosX-mcp#readme",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.23.0",
    "@taquito/signer": "^24.0.2",
    "@taquito/taquito": "^24.0.2",
    "@taquito/utils": "^24.0.2",
    "axios": "^1.13.2",
    "bn.js": "^5.2.2",
    "conf": "^15.1.0",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "node-fetch": "^3.3.2",
    "sirv": "^3.0.2",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "typescript": "^5.9.3"
  }
}
